        {
          "id": "durood-2",
          "arabic": "كَمَا صَلَّيْتَ عَلَىٰ إِبْرَاهِيمَ وَعَلَىٰ آلِ إِبْرَاهِيمَ إِنَّكَ حَمِيدٌ مَجِيدٌ",
          "transliteration": "kama sallaita 'ala Ibrahima wa 'ala ali Ibrahim, innaka Hameedun Majeed",
          "translation": "As You sent grace upon Ibrahim and the family of Ibrahim",
          "audioFile": "",
          "audioSource": "elevenlabs"
        },
        {
          "id": "durood-3",
          "arabic": "اللَّهُمَّ بَارِكْ عَلَىٰ مُحَمَّدٍ وَعَلَىٰ آلِ مُحَمَّدٍ",
          "transliteration": "Allahumma barik 'ala Muhammadin wa 'ala ali Muhammad",
          "translation": "O Allah, send blessings upon Muhammad and the family of Muhammad",
          "audioFile": "",
          "audioSource": "elevenlabs"
        },
        {
          "id": "durood-4",
          "arabic": "كَمَا بَارَكْتَ عَلَىٰ إِبْرَاهِيمَ وَعَلَىٰ آلِ إِبْرَاهِيمَ إِنَّكَ حَمِيدٌ مَجِيدٌ",
          "transliteration": "kama barakta 'ala Ibrahima wa 'ala ali Ibrahim, innaka Hameedun Majeed",
          "translation": "As You sent blessings upon Ibrahim and the family of Ibrahim",
          "audioFile": "",
          "audioSource": "elevenlabs"
        }
